
<div class="banner" style="background-image: linear-gradient(rgba(180, 150, 1, 0.3),rgba(180, 150, 1, 0.3)), url('https://images.trvl-media.com/media/content/expus/graphics/launch/home/tvly/150324_flights-hero-image_1330x742.jpg');">
  <div class="banner-content">

    <h1>Planes</h1>
    <h2>Book your plane</h2>

  </div>
</div>
<div class="container">
  <div class="row">
    <% @planes.each do |plane| %>
    <%= link_to plane_path(plane) do %>
    <div class="col-sm-4">
      <div class="card-wrapper">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= plane.picture %>');">
        </div>

        <div class="card-description">
          <h2><%= plane.make %></h2>
          <p><%= plane.rate %>
            <p>See details</p>
          </div>
        </div>
      </div>
      <% end %>
      <% end %>
      <p> <%= link_to "Add a plane", new_plane_path, class: "btn btn-primary btn-lg" %></p>
    </div>
  </div>

  <div
    id="map"
    style="width: 100%;
    height: 600px;"
    data-markers="<%= @markers.to_json %>"
  ></div>

  <div class="footer">
    <div class="footer-copyright">
    <p><%= link_to "Go back", root_path %> </p>
      Cheers from Le Wagon Amsterdam <i class="fa fa-heart"></i>
    </div>
  </div>



