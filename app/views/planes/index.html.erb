
<div class="banner" style="background-image: linear-gradient(rgba(180, 150, 1, 0.3),rgba(180, 150, 1, 0.3)), url('http://azpilots.org/images/news/backcountry/smallplane1.jpg');">
  <div class="banner-content">
    <h1>Planes</h1>
    <p>Book/Rent your plane</p>
    <%= link_to "Add a plane", root_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @planes.each do |plane| %>
      <div class="col-xs-12 col-sm-6 col-md-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('http://azpilots.org/images/news/backcountry/smallplane1.jpg');">
          <div class="card-description">
            <h2><%= plane.description %></h2>
          </div>
          <%= link_to "", root_path, class: 'card-link' %>
        </div>
      </div>
    <% end %>
  </div>
</div>

