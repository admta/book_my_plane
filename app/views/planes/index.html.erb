<div class="main-container">

  <div class="cards-container">
    <div class="row">
      <% @planes.each do |plane| %>
      <%= link_to plane_path(plane) do %>

      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="card-wrapper">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= plane.picture %>');">
          </div>

          <div class="card-description">
            <h2><%= plane.make %></h2>
            <p><%= plane.rate %></p>
            <p>See details</p>
          </div>
        </div>
      </div>

      <% end %>
      <% end %>
    </div>
  </div>



  <div id="map"></div>
  </div>

<div class="footer">
  <div class="footer-copyright">
    Cheers from Le Wagon Amsterdam <i class="fa fa-heart"></i>
  </div>
</div>


