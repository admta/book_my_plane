<div class="banner" style="background-image: linear-gradient(-225deg, #101010 0%, rgba(0,36,61,0.5) 0%), url('https://images.unsplash.com/photo-1501954557436-2b8d4d8a57e9?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=79b015e1c281967286f7f8f0c30c609a&auto=format&fit=crop&w=1490&q=80');">
  <div class="banner-content">
    <h1>Book my Plane</h1>
    <p></p>


    <input type="text" placeholder="where?" name="search">
    <a a href="planes#index" class="btn btn-primary btn-mg">find</a>
  </div>
</div>

<div class="container">
  <div class="row">
    <h3>Our top suggestions</h3>
    <% @planes.each do |plane| %>
      <%= link_to plane_path(plane) do %>
        <div class="col-sm-4">
          <div class="card-wrapper">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= plane.picture %>');">
            </div>
              <div class="card-description">
                <h2><%= plane.make %></h2>
                <p><%= plane.rate %> </p>
              </div>
          </div>
        </div>
      <% end %>
    <% end %>
    <%= link_to "Check all planes", planes_path, class: "navbar-wagon-item navbar-wagon-link" %>
  </div>
</div>
</div>
